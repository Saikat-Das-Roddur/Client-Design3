<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <rotate
            android:fromDegrees="45"
            android:pivotX="90%"
            android:pivotY="21%" >
            <shape
                android:shape="rectangle" >
                <solid  android:color="#5979B6" />
            </shape>
        </rotate>
    </item>
    <item >
        <rotate
            android:fromDegrees="45"
            android:pivotX="9%"
            android:pivotY="21%" >
            <shape
                android:shape="rectangle" >
                <solid  android:color="#5979B6" />
            </shape>
        </rotate>
    </item>
</layer-list>
