<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29354F"
    tools:context=".MainActivity">
    <RelativeLayout
        android:background="#29354F"
        android:orientation="horizontal"
        android:id="@+id/toolBarLayout"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="16dp"

            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="Multiple Accounts"
            android:textSize="24sp"
            android:id="@+id/multipleAccnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/blocker"
            android:src="@drawable/ic_lock_reset_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/blocker"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/options"
            android:src="@drawable/ic_block_helper_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/options"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_dots_vertical_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_below="@+id/toolBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/multiple_account"
            android:layout_width="match_parent"
            android:layout_height="175dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textLayout"
        android:background="#344E81"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="16dp"
            android:textColor="@android:color/white"
            android:text="Share"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/imageButtonLayout"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#344E81"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageView
                android:padding="40dp"
                android:src="@drawable/slack"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="1"
                    android:textSize="18sp"
                    android:paddingLeft="6dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="-3dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/triangle"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView

                    android:text="VIP"
                    android:layout_marginTop="12dp"
                    android:paddingRight="-2dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginLeft="-90dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:rotation="317"
                    android:background="#FCAE1A"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:padding="36dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:background="#344E81"
            android:layout_weight="1"
            android:src="@drawable/pinterestlogo"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:padding="36dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:background="#344E81"
            android:layout_weight="1"
            android:src="@drawable/facebooklogo"
            android:layout_width="120dp"
            android:layout_height="120dp" />
    </LinearLayout>

</RelativeLayout>